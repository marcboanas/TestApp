
      <%= simple_form_for @user, :validate => false, :html => { :class => '' } do |user| %>
    
      <%= user.input_field :name, placeholder: "Full Name", :class => "login" %>

      <%= user.input_field :email, placeholder: "Email", :class => "login" %>

      <%= user.input_field :password, placeholder: "Password", :hint => "Minimum length of 6 characters", :class => "login" %>

      <%= user.input_field :password_confirmation, placeholder: "Confirm Password", :class => "login" %>

      <%= user.submit "Start Your Free Trail", class: "submit add login" %>
    
      <% end %>
